{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    /* Linting */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    // "importsNotUsedAsValues": "error"
    /* Import resolution */
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": [
    //     "./src/*"
    //   ],
    // }
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}